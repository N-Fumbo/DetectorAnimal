@model IndexViewModel
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <p>@User.FindFirst(ClaimTypes.Name)?.Value</p>
        <p>@User.FindFirst(ClaimTypes.Email)?.Value</p>

        @await Html.PartialAsync("../Shared/_DetectTest", Model.Detect);

        <form method="post" asp-controller="Account" asp-action="Logout">
            <input type="submit" value="Log oit" />
        </form>
    }
    else
    {
        @await Html.PartialAsync("../Shared/_RegisterTest", Model.Register);

        @await Html.PartialAsync("../Shared/_LogInTest", Model.Login);

        <form method="post" asp-controller="Home" asp-action="Drop">
            <input type="submit" value="Drop"/>
        </form>
    }

    <script src="~/js/build/index.js" asp-append-version="true"></script>
</body>
</html>