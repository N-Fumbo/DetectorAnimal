@model RegisterViewModel

<section id="modal_window_register" class="blackout">
    <div class="modal_window">
        <div class="modal_window_container">
            <form id="form_register" class="form" method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <h1 class="form_title">Register</h1>
                <div class="form_group">
                    <input asp-for="Name" class="form_input" placeholder=" ">
                    <label asp-for="Name" class="form_label"></label>
                    <span asp-validation-for="Name" class="form_error"></span>
                </div>
                <div class="form_group">
                    <input asp-for="Email" class="form_input" placeholder=" ">
                    <label asp-for="Email" class="form_label"></label>
                    <span asp-validation-for="Email" class="form_error"></span>
                </div>
                <div class="form_group">
                    <input asp-for="Password" class="form_input" placeholder=" ">
                    <label asp-for="Password" class="form_label"></label>
                    <span asp-validation-for="Password" class="form_error"></span>
                </div>
                <div class="form_group form_group_last">
                    <input asp-for="PasswordConfirmed" class="form_input" placeholder=" ">
                    <label asp-for="PasswordConfirmed" class="form_label"></label>
                    <span asp-validation-for="PasswordConfirmed" class="form_error"></span>
                </div>
                <div class="form_group_send">
                    <span class="form_global_error"></span>
                    <input type="submit" class="form_button" value="Create" />
                </div>
                <partial name="Components/_ModalWindowComponentLoading.cshtml" />
            </form>

            <partial name="Components/_ModalWindowComponentClose.cshtml" />
        </div>
    </div>
</section>